        var browserLang = (navigator.language || navigator.browserLanguage).toLowerCase();
        var flag = sessionStorage.getItem("flag");
        console.log(browserLang);
        // if (flag != 0) {
        var orgUrl = location.href;
        if (valIsNotEmpty(orgUrl.split('?')[1])) {
            if (browserLang.indexOf("zh") >= 0) {
                window.location.href = "/ca/zh" + '?' + orgUrl.split('?')[1];
            } else if (browserLang.indexOf("en") >= 0) {
                window.location.href = "/ca/en" + '?' + orgUrl.split('?')[1];
            } else if (browserLang.indexOf("fr") >= 0) {
                window.location.href = "/ca/fr" + '?' + orgUrl.split('?')[1];
            }
        } else {
            if (browserLang.indexOf("zh") >= 0) {
                window.location.href = "/ca/zh";
            } else if (browserLang.indexOf("en") >= 0) {
                window.location.href = "/ca/en";
            } else if (browserLang.indexOf("fr") >= 0) {
                window.location.href = "/ca/fr";
            }
        }
        sessionStorage.setItem("flag", "0");
