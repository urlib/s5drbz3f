'use strict';
$ = jQuery.noConflict();

// GENERAL VARIABLE
//  return (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ||
function isMobile() {
    return ($(window).outerWidth() < 768) ? true : false;
}

$('.info').on('click', function (e) {
    e.preventDefault();

    if ($(this).hasClass('open')) {
        $(this).removeClass('open');
        $('.find-number').slideUp();
    } else {
        $(this).addClass('open');
        $('.find-number').slideDown();
    }
});
//cookie添加
var cookieStr = '';
var language = $('html')[0].lang;
$(function(){
	function cookieAdd(){
		if(language == 'zh-hans'){
			cookieStr = '<div class="cookieWrap show">'
	    		+'<div class="cookieBox cookieBox1 show">'
	    		+'<div class="title">Cookies帮助我们为您提供更好的网站服务</div>'
	    		+"<div class='cookieCont'><div class='left'>某些类型的Cookies对使用我们的网站至关重要。要了解有关Cookies的更多信息，包括如何禁用它们，请查看我们的<a href='/uk/themes/chinamobile/cookie/cookie_zh.pdf' target='_blank'>Cookie政策</a> 。点击“我接受”，即表示您同意使用Cookies。您也可选择“我不接受”，网站不会收集包含您个人信息的Cookie。</div>"
				+'<div class="right"><a href="javascript:void(0);" id="cookieAgree" class="btn">我接受</a><a href="javascript:void(0);" id="cookieDisagree" class="disbtn">我不接受</a></div>'
				+'</div></div>'
				+'<div class="cookieBox cookieBox2"><div class="cookieCont"><div class="left">您可以继续浏览网站，请留意网站不会收集任何包含您个人信息的Cookies。</div><div class="right"><a href="javascript:void(0);" id="cookieUnderstand" class="btn">我已了解</a></div></div>'
				+'</div></div>'
		}else{
			cookieStr = '<div class="cookieWrap show">'
	    		+'<div class="cookieBox cookieBox1 show">'
	    		+'<div class="title">Cookies help our website work better for you</div>'
	    		+"<div class='cookieCont'><div class='left'>Certain types of cookie are essential to use our site. For more information about cookies, including how to disable them, please check out our <a href='/uk/themes/chinamobile/cookie/cookie_en.pdf' target='_blank'>Cookie Policy</a>. By clicking ‘I accept’, you agree to our use of cookies. You can also choose 'I decline', we do not collect any cookies about your personal information.</div>"
				+'<div class="right"><a href="javascript:void(0);" id="cookieAgree" class="btn">I accept</a><a href="javascript:void(0);" id="cookieDisagree" class="disbtn">I decline</a></div>'
				+'</div></div>'
				+'<div class="cookieBox cookieBox2"><div class="cookieCont"><div class="left">You can continue to browse the website. Please note we do not collect any cookies about your personal information.</div><div class="right"><a href="javascript:void(0);" id="cookieUnderstand" class="btn">I have understood</a></div></div>'
				+'</div></div>'
		}
		$("#footer").after(cookieStr);
		$('#cookieAgree').on('click',function(){
			localStorage.setItem('cookieMessage_uk','uk');
			$('.cookieWrap').removeClass('show').addClass('hide');
		})
		$('#cookieDisagree').on('click',function(){
			localStorage.setItem('cookieMessage_uk','uk');
			$('.cookieWrap .cookieBox1').removeClass('show');
			$('.cookieWrap .cookieBox2').addClass('show');
		});
		$("#cookieUnderstand").on('click',function(){
			localStorage.setItem('cookieMessage_uk','uk');
			$('.cookieWrap').removeClass('show').addClass('hide');
			$('.cookieWrap .cookieBox2').removeClass('show');
		});
	}
	if(!(localStorage.getItem('cookieMessage_uk') == 'uk')){
		cookieAdd();
	}else{
		$('.cookieWrap').removeClass('show').addClass('hide');
	}
})


