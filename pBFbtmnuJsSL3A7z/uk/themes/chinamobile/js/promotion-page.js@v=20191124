$('.promotion-package .view-promotion-details').on('click', function (e) {		
	e.preventDefault();
	var doc = $(this).parents('.wrapper-banner').siblings(".view-details");
	if ($(this).hasClass('active')) {
	    $(this).removeClass('active');
	    doc.slideUp();
	} else {
	    $(this).addClass('active');
	    doc.slideDown();
	}
});
